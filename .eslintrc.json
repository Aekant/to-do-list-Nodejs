{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "off",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                // we have a varsIgnorePattern and an argsIgnorePattern
                "argsIgnorePattern": "(req|res|next|con|info|job)"
            }
        ]
    }
}